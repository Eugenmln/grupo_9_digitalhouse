<!DOCTYPE html>
<html lang="en">
<%- include ('../partials/head.ejs') %>
<script src="/js/validator.j"></script>
<body>
    <!-- Header -->
    <%- include ('../partials/header.ejs') %>
    
    <!-- Sección principal -->
    <section class="registro-login">
        <div class="facebook"> 
            <a href="#"><i class="fab fa-facebook-square"> </i> <span class="registrate-con-facebook"> Ingresá con Facebook </span></a>
        </div>
        <div class="division">
            <div class="linea"> </div>
            <div class="o"> o </div>
            <div class="linea"> </div>
        </div>
        <div class="registrate-con-email"> Ingresá con tu email y contraseña </div>
        <form class="form user-login validate-login-user" action="/users/login" method="POST">
            <div class="datos">
                <input class="validate-login-email" type="email" name="email" placeholder="Email">
                <% if (locals.errors  && errors.email){ %>
                    <div class="text-danger"> <%= errors.email.msg %> </div>
               <% } %>   
            </div>
            <div class="datos">
                <input class="validate-login-contraseña" type="password" name="contraseña" placeholder="Contraseña">
                <% if (locals.errors && errors.contraseña){ %>
                    <div class="text-danger"> <%= errors.contraseña.msg %> </div>
               <% } %>    
            </div>
            <div class="boton-recordar" >
                <label for="checkbox"><input type="checkbox" name="recordame"> Recordar usuario </label>
            </div>
            <div class="datos"> 
                <a href="#"> ¿Olvidaste tu contraseña? </a>
            </div>
            <div class="datos">
                <button class="boton-rl" type="submit"> Ingresá </button>
            </div>
            <div class="datos"> 
                ¿Todavía no sos cliente? Registrate <a href="/users/register"> acá </a> 
            </div>
        </form>
    </section>
    <%- include ('../partials/footer.ejs') %>    
</body>
</html>