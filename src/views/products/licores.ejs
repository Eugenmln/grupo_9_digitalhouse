<!DOCTYPE html>
<html lang="en">
<%- include ('../partials/head.ejs') %>
<body>
    <%- include ('../partials/header.ejs') %>  
	<main>
	<h1 class="productosE">Licores</h1>			
	<div class="conteiner">
		<div class="botellas"> <!--grid-->
		
							<% licores.forEach(licores => {%>
						<article class="articulo-producto"> <!--card-->
							<a href="/products/<%=licores.id%>"><img src="../images/<%=licores.imagen%>" alt="productos"> </a>
							<div class="btn-actions">
							<div class="prices">Nombre: <%=licores.nombre%></div>
							<div class="prices">$<%=licores.precio%></div>
							<div class="prices"><%=licores.descripcion%></div>
							<div class="prices">Stock: <%=licores.stock%></div>
						</div>
						<div class="boton-comprar-products">
							<a href="/products/<%=licores.id%>"><button type="submit" class="boton-comprar-products">Comprar</button></a>
						</div>
						
								
						</article>
						
						<% }) %>
			
							
		</div>
		</div>    
			</main>           
    <%- include ('../partials/footer.ejs') %>  
</body>
</html>